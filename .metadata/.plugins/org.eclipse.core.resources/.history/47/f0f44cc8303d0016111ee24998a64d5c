
#ifndef STATEFUL_H_
#define STATEFUL_H_


typedef enum {
  TCP_HANDSHAKE     = 1,
  TCP_ESTABLISHED   = 2,
  TCP_TERMINATED    = 3,

  FTP_HANDSHAKE     = 4,
  FTP_ESTABLISHED   = 5,
  FTP_CONNECTED     = 6,
  FTP_TRANSFER      = 7,
  FTP_TERMINATED    = 8,

  HTTP_HANDSHAKE    = 9,
  HTTP_ESTABLISHED  = 10,
  HTTP_CONNECTED    = 11,
  HTTP_TERMINATED   = 12,
} protocol_state;


typedef enum {
  SENT_SYN_WAIT_SYN_ACK   = 1,
  SENT_SYN_ACK_WAIT_SYN   = 2,
  ESTABLISHED             = 3,
  TERMINATED              = 4,
} tcp_state;

typedef struct {
  __be32          src_ip;
  __be16          src_port;
  __be32          dst_ip;
  __be16          dst_port;
  __u16           id;             // TODO(amirt): understand what this is and rename it.
  __u16           frag_off;       // TODO(amirt): understand what this is and rename it.
  tcp_state       protocol;
  protocol_state  type;
  unsigned long   timestamp;
  struct list_head list;          /* kernel's list structure */
} connections_list_entry;

#endif /* STATEFUL_H_ */
